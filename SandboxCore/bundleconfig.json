// Configure bundling and minification for the project.
// More info at https://go.microsoft.com/fwlink/?LinkId=808241
[
  {
    "outputFileName": "wwwroot/css/site.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/site.css"
    ]
  },
  {
    "outputFileName": "wwwroot/js/site.min.js",
    "inputFiles": [
      "wwwroot/js/site.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optinally generate .map file
    "sourceMap": false
  },
  {
    "outputFileName": "wwwroot/css/site.css",
    "inputFiles": [
      "wwwroot/scss/Site.css",
      "wwwroot/scss/_parallax.css",
      "wwwroot/scss/userManagement.css",
      "wwwroot/scss/accounts.css",
      "wwwroot/scss/testing.css",
      "wwwroot/scss/chat.css"
      // we bundle all of the css files but make sure there are no
      // min.css files or we will have dups
    ]
  }
]
